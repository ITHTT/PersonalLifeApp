<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/bottom_navigation_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?selectableItemBackgroundBorderless"
    android:minWidth="105dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/tab_menu_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@mipmap/icon_tab_message_selected"
        android:gravity="center" />

    <TextView
        android:id="@+id/tab_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp"
        tools:text="Label One" />

    <TextView
        android:id="@+id/tab_menu_message"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:alpha="0"
        android:background="@drawable/message_background"
        android:elevation="1dp"
        android:gravity="center"
        android:minWidth="16dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text=""/>
</FrameLayout>