<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.htt.personallife.views.widgets.circularprogressview.CircularProgressView
        android:id="@+id/loading_progressview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_thickness="3dp"
        app:cpv_color="@color/colorPrimary"/>

    <TextView
        android:id="@+id/load_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="加载中..."
        android:textSize="14sp"
        android:textColor="#3a3a3a"/>

    <Button
        android:id="@+id/btn_doing"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/btn_green_border_selector"
        android:textSize="15sp"
        android:text="点击重试"
        />


</merge>